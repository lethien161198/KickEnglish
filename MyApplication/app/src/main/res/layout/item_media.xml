<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginRight="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        cardview:cardBackgroundColor="#0F4E98"
        cardview:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/imgmedia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/watch"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:background="@drawable/custom_button_playvideo"
        android:text="@string/txtPlaySamplevideo"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/role"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:background="@drawable/custom_button_role"
        android:text="@string/txtRolePlaying"
        android:textColor="@color/white" />

</LinearLayout>
